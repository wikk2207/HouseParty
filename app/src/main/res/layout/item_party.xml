<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/colorTransparent"
              android:padding="10dp"
>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="5dp"
            android:gravity="center">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            <TextView
                    android:text="@string/partyName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/partyNameTextView"
                    android:textSize="23dp"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="10dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/partyStart"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_weight="1"
                android:textColor="@color/colorPrimaryDark"/>
                <TextView
                        android:text="@string/partyStartExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partyStartTextView"
                        android:layout_weight="3"
                        android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="@string/partyEnd"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10"
                        android:layout_weight="1"
                        android:textColor="@color/colorPrimaryDark"/>
                <TextView
                        android:text="@string/partyEndExample"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/partyEndTextView"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_weight="3"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center">
            <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/users_group"
                    android:id="@+id/userTypeImageView"
                    android:padding="3dp"/>
            <TextView
                    android:text="@string/organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/userTypeTextView"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>